@model ATM.MVC.Models.ContactMessageModel.ContactMessageModelRequest
@{
    ViewData["Title"] = "Home Page";
}

<div class="section--container">

    <div class="section section1">
        <h1 class="section--h1">Elegance in every curve<br>Power in every ride.</h1>
    </div>

    <div class="section section2">
        <div class="slider--container">
            <ul>
                <li>
                    <div class="carousel carousel--item1">
                        <h2>Mercedes-Benz S-Class</h2>
                        <input type="button" name="name" value="More information" />
                    </div>
                </li>
                <li>
                    <div class="carousel carousel--item2">
                        <h2>Audi R8</h2>
                        <input type="button" name="name" value="More information" />
                    </div>
                </li>
                <li>
                    <div class="carousel carousel--item3">
                        <h2>Lamborghini Urus</h2>
                        <input type="button" name="name" value="More information" />
                    </div>
                </li>
                <li>
                    <div class="carousel carousel--item4">
                        <h2>Aston Martin DB11</h2>
                        <input type="button" name="name" value="More information" />
                    </div>
                </li>
            </ul>
        </div>
    </div>


    <div class="section section3">
        <div class="section3-container">
            <div class="testimonials">
                <h2>What our customers say</h2>
                <div class="testimonial-container">
                    <div class="testimonial-item">
                        <div class="testimonial-stars">★★★★★</div>
                        <p class="testimonial-text">"The buying experience was exceptional. The team understood exactly what I was looking for in a European luxury vehicle."</p>
                        <p class="testimonial-author">— Miguel Rodríguez, BMW Serie 7</p>
                    </div>
                    <div class="testimonial-item">
                        <div class="testimonial-stars">★★★★★</div>
                        <p class="testimonial-text">"Impeccable after-sales service and follow-up. My Mercedes-Benz has never been in better hands."</p>
                        <p class="testimonial-author">— Ana Gómez, Mercedes-Benz E-Class</p>
                    </div>
                    <div class="testimonial-item">
                        <div class="testimonial-stars">★★★★★</div>
                        <p class="testimonial-text">"Superior technical knowledge and passion for European cars. A luxury experience from start to finish."</p>
                        <p class="testimonial-author">— Carlos Vega, Audi A8</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="modalform" class="modal--form" style="display: none;">
        <div class="modalformheader">
            <p>Contact Message</p>
            <input id="closemodalbutton" class="modal--button__close" type="button" value="X" />
        </div>
        <form asp-action="CreateContactMessage" method="post">
            <div class="form--section">
                <label for="Name">Name</label>
                <input type="text" id="Name" asp-for="Name" required />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form--section">
                <label for="Email">Email</label>
                <input type="email" id="Email" asp-for="Email" required />
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form--section">
                <label for="Message">Message</label>
                <textarea id="Message" asp-for="Message" required></textarea>
                <span asp-validation-for="Message"></span>
            </div>

            <div class="form--section">
                <button type="submit">Enviar mensaje</button>
            </div>
        </form>
    </div>
    <input id="modalbutton" class="modal--button" type="button" value="Register message" />
</div>

<script>
    var modalform = document.getElementById("modalform");
    var modalbutton = document.getElementById("modalbutton");
    var closemodalbutton = document.getElementById("closemodalbutton");

    modalbutton.addEventListener("click", () => {
        modalform.style.display = "block";
        modalbutton.style.display = "none";
    });

    closemodalbutton.addEventListener("click", () =>{
        modalform.style.display = "none";
        modalbutton.style.display = "block";
    });
</script>